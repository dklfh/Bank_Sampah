<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".aboutus"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navbar"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

      <TextView
          android:id="@+id/textView3"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:fontFamily="@font/ralewaysemibold"
          android:layout_gravity="center"
          android:gravity="center"
          android:layout_marginLeft="30dp"
          android:text="About us"
          android:textColor="@color/white"
          android:textSize="18sp"
          android:textStyle="bold"/>

      <ImageView
          android:id="@+id/imageView2"
          android:layout_width="70dp"
          android:layout_height="35dp"
          android:layout_weight="1"
          android:layout_gravity="end"
          android:contentDescription="@string/logo"
          android:src="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingHorizontal="25dp"
        android:gravity="center_horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/ralewayblack"
          android:text="APP Maker"
          android:textSize="24sp"
          android:textColor="@color/black"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginVertical= "13dp"
          android:orientation="horizontal"
          android:padding="10dp"
          android:background="@drawable/aboutusly"
          android:elevation="8dp"
          android:outlineProvider="bounds">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gungwah"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="13dp">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/ralewaybold"
              android:text="Nama: I Gusti Ngurah Agung Mantra Suyasa"
              android:textColor="@color/black"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/ralewaybold"
              android:text="Alamat: Jln Merthajaya Gang 3 No 17"
              android:textColor="@color/black"
              android:layout_marginVertical="3dp"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/ralewaybold"
              android:text="Sekolah:SMKN 1 Denpasar"
              android:textColor="@color/black"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/ralewaybold"
              android:text="Hobi: Menggambar"
              android:textColor="@color/black"
              android:layout_marginTop="3dp"/>

        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginVertical="8dp"
          android:orientation="horizontal"
          android:padding="10dp"
          android:background="@drawable/aboutusly"
          android:elevation="8dp"
          android:outlineProvider="bounds">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:src="@drawable/devara"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="13dp">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/ralewaybold"
              android:text="Nama: I Putu Devara Cahya Dhika Dinata"
              android:textColor="@color/black"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/ralewaybold"
              android:text="Alamat: Jalan Gunung Batur perum Nusa bumi ayu no 5 A"
              android:textColor="@color/black"
              android:layout_marginVertical="3dp"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/ralewaybold"
              android:text="Sekolah:SMKN 1 Denpasar"
              android:textColor="@color/black"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/ralewaybold"
              android:text="Hobi: Bermain Gitar"
              android:textColor="@color/black"
              android:layout_marginTop="3dp"/>

        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginVertical="8dp"
          android:orientation="horizontal"
          android:padding="10dp"
          android:background="@drawable/aboutusly"
          android:elevation="8dp"
          android:outlineProvider="bounds">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:src="@drawable/yande"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="13dp">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/ralewaybold"
              android:text="Nama:I Wayan Kusuma Negara"
              android:textColor="@color/black"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/ralewaybold"
              android:text="Alamat:Jln Apit Telaga No.6 Peguyangan Kaja"
              android:textColor="@color/black"
              android:layout_marginVertical="3dp"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/ralewaybold"
              android:text="Sekolah:SMKN 1 Denpasar"
              android:textColor="@color/black"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/ralewaybold"
              android:text="Hobi: Catur"
              android:textColor="@color/black"
              android:layout_marginTop="3dp"/>

        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginVertical="8dp"
          android:orientation="horizontal"
          android:padding="10dp"
          android:background="@drawable/aboutusly"
          android:elevation="8dp"
          android:outlineProvider="bounds">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sulih"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="13dp">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/ralewaybold"
              android:text="Nama: Sulih Muhammad Ragil"
              android:textColor="@color/black"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/ralewaybold"
              android:text="Alamat: Jln Gunung Soputan "
              android:textColor="@color/black"
              android:layout_marginVertical="3dp"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/ralewaybold"
              android:text="Sekolah:SMKN 1 Denpasar"
              android:textColor="@color/black"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/ralewaybold"
              android:text="Hobi: PhotoGrafer"
              android:textColor="@color/black"
              android:layout_marginTop="3dp"/>

        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginVertical="10dp">
        <Button
            android:id="@+id/back"
            android:contentDescription="back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/baseline_arrow_back_24"/>
      </LinearLayout>

    </LinearLayout>
  </LinearLayout>


  </androidx.drawerlayout.widget.DrawerLayout>