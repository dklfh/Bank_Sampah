<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".datasatuann">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/textinput_home"
                android:drawableLeft="@drawable/search"
                android:fontFamily="@font/ralewayregular"
                android:hint="Cari Data Satuan"
                android:paddingLeft="15dp"
                android:paddingVertical="15dp"
                android:textColor="@color/teks"
                android:textSize="16sp"
                android:drawablePadding="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:background="@drawable/warnahijauhome"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/ralewaymedium"
                    android:text="Nama Satuan"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginVertical="10dp"
                    android:text="Test"
                    android:background="@drawable/bgooglebt" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit"
                        android:layout_marginRight="15dp"
                        android:text="edit"
                        android:textColor="@color/white"
                        android:fontFamily="@font/ralewaybold"/>

                    <Button
                        android:id="@+id/button_hapus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/hapus"
                        android:text="HAPUS"
                        android:textColor="@color/white"
                        android:fontFamily="@font/ralewaybold"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|end"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageButton"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/plus" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>